{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping for SDK source code */
    "baseUrl": ".",
    "paths": {
      "@ppyuesheng/loki-sdk-h5-core": ["../../packages/core/src/index.ts"],
      "@ppyuesheng/loki-sdk-h5-transport-loki": ["../../packages/transport-loki/src/index.ts"],
      "@ppyuesheng/loki-sdk-h5-adapter-js": ["../../packages/adapter-js/src/index.ts"],
      "@ppyuesheng/loki-sdk-h5-adapter-vue": ["../../packages/adapter-vue/src/index.ts"],
      "@ppyuesheng/loki-sdk-h5-adapter-rn": ["../../packages/adapter-rn/src/index.ts"]
    }
  },
  "include": ["src", "index.html"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
